    "express": "^4.17.1",
    "firebase-admin": "^9.4.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "node-cron": "^2.0.3",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@prisma/cli": "^2.14.0",
    "@types/bcryptjs": "^2.4.2",
